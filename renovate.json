{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "renovate-",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "dependencies-non-major",
      "matchCurrentVersion": "!/^0/",
      "matchUpdateTypes": [
        "digest",
        "minor",
        "patch",
        "pin"
      ]
    },
    {
      "groupName": "dependencies-non-major",
      "matchCurrentVersion": "/^0/",
      "matchUpdateTypes": [
        "digest",
        "patch",
        "pin"
      ]
    }
  ]
}
